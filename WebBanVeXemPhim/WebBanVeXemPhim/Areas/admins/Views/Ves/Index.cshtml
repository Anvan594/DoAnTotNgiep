@model IEnumerable<WebBanVeXemPhim.Models.Ve>

@{
    ViewData["Title"] = "Danh sách vé";
    Layout = "~/Areas/admins/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="container mt-4" style="padding-top:30px">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2><i class="fas fa-ticket-alt"></i> Quản lý vé</h2>
    </div>

    <div class="table-responsive">
        <table class="table table-striped table-hover">
            <thead >
                <tr>
                    <th>Người đặt</th>
                    <th>Tên phim</th>
                    <th>Số ghế</th>
                    <th>Ngày đặt</th>
                    <th>Giá vé</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => item.MaKhachHangNavigation.TenNguoiDung)</td>
                        <td>@Html.DisplayFor(modelItem => item.MaLichChieuNavigation.MaPhimNavigation.TenPhim)</td>
                        <td>@Html.DisplayFor(modelItem => item.MaGheNavigation.SoGhe)</td>
                        <td>@(item.NgayDat.HasValue ? item.NgayDat.Value.ToString("dd/MM/yyyy HH:mm") : "N/A")</td>
                        <td>@Html.DisplayFor(modelItem => item.GiaVe)</td>
                       
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
