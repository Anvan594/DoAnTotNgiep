</style>
<script>
    function openVideoModal(videoUrl, movieTitle) {
        var videoModal = new bootstrap.Modal(document.getElementById('videoModal'), {
            keyboard: false
        });

        var iframeElement = document.getElementById("youtubeIframe");

        // Lấy ID video từ link YouTube
        let videoId = extractYouTubeId(videoUrl);
        if (videoId) {
            iframeElement.src = `https://www.youtube.com/embed/${videoId}?autoplay=1&rel=0`;
            videoModal.show();
        }

        // Khi modal đóng, reset iframe để dừng video
        document.getElementById("videoModal").addEventListener('hidden.bs.modal', function () {
            iframeElement.src = "";
        });
        var modalTitleElement = document.getElementById("modal_title");

        // Cập nhật tiêu đề phim trong modal
        modalTitleElement.innerText = "Trailer - " + movieTitle;
    }

    // Hàm trích xuất ID từ link YouTube (Hỗ trợ cả dạng dài & rút gọn)
    function extractYouTubeId(url) {
        let match = url.match(/(?:youtu\.be\/|youtube\.com\/(?:.*v=|.*\/))([a-zA-Z0-9_-]+)/);
        return match ? match[1] : null;
    }


    // Hàm trích xuất ID từ link YouTube
    function extractYouTubeId(url) {
        let match = url.match(/(?:youtu\.be\/|youtube\.com\/(?:.*v=|.*\/))([a-zA-Z0-9_-]+)/);
        return match ? match[1] : null;
    }
    function showMovies(section) {
        // Ẩn tất cả các phần
        document.querySelectorAll('.movie-section').forEach(section => section.classList.add('d-none'));

        // Hiển thị phần được chọn
        document.getElementById(section).classList.remove('d-none');

        // Xóa class 'active' khỏi tất cả các tab
        document.querySelectorAll('.tab-films li').forEach(tab => tab.classList.remove('active'));

        // Thêm class 'active' vào tab được nhấn
        if (section === 'comingSoon') {
            document.querySelector('.tab-films li:nth-child(1)').classList.add('active');
        } else if (section === 'nowShowing') {
            document.querySelector('.tab-films li:nth-child(2)').classList.add('active');
        } else {
            document.querySelector('.tab-films li:nth-child(3)').classList.add('active');
        }
    }
        document.addEventListener("DOMContentLoaded", function () {
        // Khi bấm nút "MUA VÉ", tự động chọn ngày hiện tại
        document.querySelectorAll('.btn-buy-ticket').forEach(button => {
            button.addEventListener("click", function () {
                var today = new Date();
                var todayFormatted = today.getFullYear() + "-" +
                        String(today.getMonth() + 1).padStart(2, '0') + "-" +
                    String(today.getDate()).padStart(2, '0');

                var MaPhim = this.getAttribute("data-phim-id"); // Lấy mã phim từ button
                console.log("Mở modal phim:", MaPhim, "Ngày truyền:", todayFormatted);

                ClickNgay(MaPhim, todayFormatted); // Hiển thị suất chiếu của ngày hôm nay
            });
        });
    });

    function ClickNgay(MaPhim, Ngaychieu) {
        // Lấy modal tương ứng với phim đang mở
        let modal = document.querySelector(`#ticketModal_${MaPhim}`);
        if (!modal) {
                console.warn(`Không tìm thấy modal cho MaPhim: ${MaPhim}`);
            return;
        }

        // Bỏ class active ở tất cả các ngày trong modal đó
            modal.querySelectorAll(".ngayHienThi").forEach(li => li.classList.remove("active"));

        // Thêm class active vào ngày được click
        let selectedDay = modal.querySelector(`.ngay-${Ngaychieu}`);
        if (selectedDay) {
                selectedDay.classList.add("active");
        } else {
            console.warn(`Không tìm thấy phần tử ngày: ngay-${Ngaychieu}`);
        }

        console.log("Ngày được click:", Ngaychieu);

        // Ẩn tất cả suất chiếu trong modal đó
        modal.querySelectorAll('.ngay-chieu').forEach(el => el.classList.add('d-none'));

        // Hiển thị suất chiếu có cùng ngày
        let elements = modal.querySelectorAll(`.ngay-${Ngaychieu}`);
        if (elements.length > 0) {
            elements.forEach(el => el.classList.remove('d-none'));
            console.log("Hiển thị thành công:", elements);
        } else {
            console.warn("Không tìm thấy suất chiếu cho ngày:", Ngaychieu);
        }
    }

</script>
