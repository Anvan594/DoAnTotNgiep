    @*Phim đang chiếu*@
    <div class="row row-cols-2 row-cols-md-4 g-4 movie-section" id="nowShowing">
        @foreach (var item in Model)
        {
            var trailer = ((List<Trailer>)ViewBag.DanhSachTrailer)
            .FirstOrDefault(t => t.MaPhim == item.MaPhim);
            if (item.TrangThai == true && item.NgayKhoiChieu < DateOnly.FromDateTime(DateTime.Now.AddDays(3)))
            {
                <div class="col">
                    <div class="card movie-card h-100 border-0 shadow-sm">
                        <!-- Poster phim -->
                        <div class="position-relative movie-poster" style="background-color:#f8f9fa">
                            <img src="~/images/@item.Poster" class="card-img-top rounded-3" alt="@item.TenPhim">

                            <!-- Nhãn độ tuổi -->
                            @if (!string.IsNullOrEmpty(item.DoTuoi))
                            {
                                <span class="badge badge-age position-absolute top-0 start-0 m-3">
                                    @item.DoTuoi
                                </span>

                            }


                            <!-- Biểu tượng play -->
                            @if (trailer != null && !string.IsNullOrEmpty(trailer.DuongDanTrailer))
                            {
                                <span class="play-icon" onclick="openVideoModal('@trailer.DuongDanTrailer', '@item.TenPhim')">
                                    <i class="fas fa-play-circle"></i>
                                </span>
                            }
                        </div>

                        <div class="card-body" style="background-color:#f8f9fa">
                            <a href="#" class="card-title fw-bold text-primary text-decoration-none d-block mb-2 movie-title" style="font-size:18px">
                                @(item.TenPhim.Length > 20 ? item.TenPhim.Substring(0, 20) + "..." : item.TenPhim)
                            </a>
                            <p class="card-text text-muted text-start mx-auto" style="font-size:14px">
                                <strong>Thể loại:</strong> @item.TheLoai <br>
                                <strong>Thời lượng:</strong> @item.ThoiLuong phút
                            </p>
                            <button class="btn btn-buy-ticket w-100 fw-bold"
                                    data-phim-id="@item.MaPhim"
                                    data-bs-toggle="modal"
                                    data-bs-target="#ticketModal_@item.MaPhim">
                                MUA VÉ
                            </button>


                        </div>

                    </div>
                </div>
                @*mua vé*@
                <div class="modal fade" id="ticketModal_@item.MaPhim" tabindex="-1" aria-labelledby="ticketModalLabel" aria-hidden="true">
                    <div class="modal-dialog modal-dialog-centered" style="max-height:800px;max-width: 1000px;margin-top:0px;">
                        <div class="modal-content" style="height:550px">
                            <div class="modal-header">
                                <h5 class="modal-title" id="ticketModalLabel">Lịch chiếu - Phim @item.TenPhim</h5>

                                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                            </div>
                            <h2 class="text-center p-2">Mua vé xem phim</h2>

                            <div class="modal-body m-2">
                                <ul class="d-flex flex-wrap list-unstyled" style="margin-bottom:0">
                                    @{
                                        List<DateOnly> ngayDaHienThi = new List<DateOnly>(); // Danh sách lưu ngày đã hiển thị
                                        int soNgayHienThi = 0; // Biến đếm số ngày hiển thị tối đa 5
                                        DateOnly ngayHienTai = DateOnly.FromDateTime(DateTime.Now); // Lấy ngày hiện tại
                                        TimeOnly gioHienTai = TimeOnly.FromDateTime(DateTime.Now);

                                    }

                                    @foreach (var lc in ViewBag.danhSachLichChieu)
                                    {
                                        if (soNgayHienThi >= 5) // Giới hạn chỉ hiển thị 5 ngày
                                        {
                                            break;
                                        }

                                        if (lc.MaPhim == item.MaPhim && lc.NgayChieu >= ngayHienTai && !ngayDaHienThi.Contains(lc.NgayChieu) && lc.GioChieu > gioHienTai)
                                        {
                                            ngayDaHienThi.Add(lc.NgayChieu); // Thêm ngày vào danh sách để tránh trùng lặp
                                            soNgayHienThi++; // Tăng số lượng ngày hiển thị

                                            string ngay = lc.NgayChieu.ToString("dd");
                                            string thang = lc.NgayChieu.ToString("MM");

                                            // Lấy thứ trong tuần và chuyển đổi sang định dạng T2, T3, ..., CN
                                            string thu = lc.NgayChieu.DayOfWeek switch
                                            {
                                                DayOfWeek.Monday => "T2",
                                                DayOfWeek.Tuesday => "T3",
                                                DayOfWeek.Wednesday => "T4",
                                                DayOfWeek.Thursday => "T5",
                                                DayOfWeek.Friday => "T6",
                                                DayOfWeek.Saturday => "T7",
                                                DayOfWeek.Sunday => "CN",
                                                _ => ""
                                            };

                                            <li onclick="ClickNgay('@item.MaPhim', '@lc.NgayChieu.ToString("yyyy-MM-dd")')"
                                                class="text-center d-block ngayHienThi ngay-@lc.NgayChieu.ToString("yyyy-MM-dd") ticketModal_@item.MaPhim"
                                                style="width:170px;padding:0 8px 0 10px;cursor:pointer;user-select: none;">
                                                <span style="font-size:45px">@ngay</span>
                                                <span style="font-size:20px">/@thang-@thu</span>
                                            </li>


                                        }
                                    }

                                </ul><hr style="margin-top:0" />
                                <p><strong style="font-size:25px">Giờ chiếu</strong></p>
                                <ul class="d-flex flex-wrap list-unstyled" style="margin-bottom:0">
                                    @foreach (var lc in ViewBag.danhSachLichChieu)
                                    {
                                        if (lc.MaPhim == item.MaPhim &&
                                        (lc.NgayChieu > ngayHienTai || (lc.NgayChieu == ngayHienTai && lc.GioChieu > gioHienTai)))
                                        {
                                            <li
                                                class="text-center d-block ngay-chieu d-none ngay-@lc.NgayChieu.ToString("yyyy-MM-dd")"
                                                style="width:130px;padding:0 8px 0 10px ;margin-right: 30px;">
                                                <button style="width:120px;border:none;margin-right:10px"> <span style="font-size:25px">@lc.GioChieu.ToString("HH:mm")</span></button>
                                                <p>@lc.TongGheTrong ghế trống<p>
                                            </li>

                                        }
                                    }


                                </ul>
                                
                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Đóng</button>
                                <button type="button" class="btn btn-primary">Xác nhận đặt vé</button>
                            </div>
                        </div>
                    </div>
                </div>
            }

        }
    </div>
