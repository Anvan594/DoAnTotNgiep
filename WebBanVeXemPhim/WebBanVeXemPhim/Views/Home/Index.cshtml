<style>
    /* Đảm bảo nền chính và nền phần phim có cùng màu */
    .container.mt-4,
    .container.mt-4 .movie-section {
        background-color: #f8f9fa !important; /* Màu nền giống nhau */
        border: none; /* Xóa viền nếu có */
    }

    /* Đảm bảo không có đường viền hay hiệu ứng bóng */
    .movie-card {
        background-color: transparent !important;
        box-shadow: none !important; /* Loại bỏ bóng nếu có */
        border: none !important; /* Loại bỏ viền nếu có */
    }

    /* Hiệu ứng chuyển slide mượt mà */
    .carousel-fade .carousel-item {
        opacity: 0;
        transition: opacity 1.5s ease-in-out;
    }

        .carousel-fade .carousel-item.active {
            opacity: 1;
        }

    /* Điều chỉnh hình ảnh */
    .banner-img {
        object-fit: cover;
        height: 400px; /* Điều chỉnh kích thước theo trang */
        border-radius: 12px;
    }

    .container {
        max-width: 80%;
        margin: 0 auto; /* Căn giữa */
    }
    /* Đảm bảo poster có cùng tỷ lệ */
    .movie-poster {
        position: relative;
        overflow: hidden;
        border-radius: 25px;
    }

        .movie-poster img {
            width: 100%;
            height: 400px; /* Điều chỉnh nếu cần */
            object-fit: cover;
            transition: all 0.3s ease-in-out;
        }

    .movie-card {
        max-width: 250px
    }

        .movie-card:hover {
            transform: none !important;
            box-shadow: none !important;
        }
    /* Hiệu ứng làm tối khi hover */
    .movie-poster::after {
        content: "";
        position: absolute;
        top: 0;
        left: 0;
        border-radius: 8px;
        width: 100%;
        height: 100%;
        background: rgba(0, 0, 0, 0); /* Ban đầu trong suốt */
        transition: background 0.3s ease-in-out;
    }

    .play-icon {
        font-size: 50px;
        color: white;
        border-radius: 50%;
        padding: 15px;
        cursor: pointer;
        opacity: 0;
        visibility: hidden;
        transition: all 0.3s ease-in-out;
        position: absolute;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%) scale(1);
        z-index: 2;
    }

    /* Hiển thị nút play khi hover */
    .movie-poster:hover .play-icon {
        opacity: 1;
        visibility: visible;
        transform: translate(-50%, -50%) scale(1.2);
    }
    /* Khi hover, làm tối nền */
    .movie-poster:hover::after {
        background: rgba(0, 0, 0, 0.5);
    }

    /* Badge độ tuổi */
    .badge-age {
        background-color: #ffc107; /* Vàng */
        color: #000;
        padding: 6px 12px;
        font-size: 16px;
        font-weight: bold;
        border-radius: 6px;
        z-index: 2;
        position: relative;
    }

    .btn-buy-ticket {
        width: 100%; /* Đảm bảo nút luôn rộng full */
        background-color: #007bff; /* Màu xanh */
        color: white;
        font-size: 16px;
        border-radius: 8px;
        transition: all 0.3s;
    }

        .btn-buy-ticket:hover {
            color: black;
            background-color: #007bff; /* Màu xanh */
        }

    .movie-title:hover {
        color: #ff5733 !important; /* Đổi màu thành cam khi hover */
        text-shadow: 0px 0px 8px rgba(255, 87, 51, 0.7); /* Hiệu ứng phát sáng */
    }

    .tab-films > li.active {
        border-bottom: 4px solid transparent;
        border-image: linear-gradient(to right, #39adf0 0%, #075fa3 100%);
        border-image-slice: 1;
        border-width: 0px 0px 4px 0px;
    }

    .tab-films > li.active a h1 {
        color: #03599d;
    }

    .nav-tabs a {
        display: block;
        text-decoration: none;
        cursor: pointer;
    }

    .nav-tabs a h1 {
        font-size: 30px;
        color: black;
        padding: .5rem;
    }

    .ngayHienThi.active {
